{
  "name": "calendarai-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "CalendarAI - AI-powered calendar management (Monorepo)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:web": "npm run start --workspace=packages/web",
    "dev:all": "npm-run-all --parallel dev:backend dev:web",
    "build:web": "npm run build --workspace=packages/web",
    "install:all": "npm install",
    "clean": "rm -rf node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
